<div id="<%= dom_id category %>">
  <figure class="my-5">
    <%= image_tag category.image %>
  </figure>

  <div class="my-5">
    <h2 class="text-2xl"><%= category.name %></h2>
  </div>

  <p class="my-5">
    <strong class="block font-medium mb-1">Descripción:</strong>
    <%= category.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Ver categoría", [:admin, category], class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Editar categoría", edit_admin_category_path(category), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
